.song-list{
  width:750rpx;
  padding:20rpx 0 0 40rpx;

}
.song-item{
  overflow: hidden;
  position: relative;
  height:64px;
  padding:0 80rpx 0 0;
  border-bottom:1px solid #ddd;
  
}
.song-item  .song-name{
  overflow: hidden;
  height:20px;
  font-size:16px;
  margin-top: 20rpx;
  padding:0 90rpx 0 0;
}
.song-item .song-bottom{
  overflow: hidden;
  display: flex;
  height:40px;
  font-size: 13px;
  line-height: 40px;
  color:#888;
  padding:0 80rpx 0 0;
}
.song-item .song-bottom .singer{
  margin-right: 10rpx;
}
.song-item .playBtn{
  position: absolute;
  right:80rpx;
  top:40rpx;
  width:26px;
  height:26px;
}
.song-item .playBtn image{
  display: block;
  width:26px;
  height:26px;
}
