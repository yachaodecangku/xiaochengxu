.tabbar{
  display: flex;
  width:100%;
  height:80rpx;
  line-height: 80rpx;
  font-size: .8rem;
  border-bottom: 1px solid #ddd;
}
.tabbar>view{
  width:33%;
  height:80rpx;
  text-align: center;
  background: #fff;
}
.tabbar>view>text{
  display: inline-block;
  height: 75rpx;
}
.tabbar>.active>text{
  color: #ec1004;
  border-bottom: 5rpx #d43c33 solid;
}